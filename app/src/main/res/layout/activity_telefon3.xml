<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gabi.zadanie5.Telefon3">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewHuawei"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Huawei P9 Lite 2017"
            android:textSize="40dp"
            android:layout_gravity="center"/>

        <ImageView
            android:id="@+id/huawei"
            android:layout_width="312dp"
            android:layout_height="293dp"
            android:layout_gravity="center"
            android:src="@mipmap/huawei"
            tools:layout_editor_absoluteX="36dp"
            tools:layout_editor_absoluteY="64dp"/>

    <TextView
        android:id="@+id/opisSamsung"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="
Wyświetlacz:
5,2 cala, 1920 x 1080 pikseli

Procesor:
Kirin 655, ośmiordzeniowy 2,1 GHz 64-bit, grafika Mali T830

System operacyjny:  Android 7 Nougat

Pamięć RAM:  3 GB

Pamięć wbudowana:  16 GB

Aparat foto:  12 Mpix

Komunikacja:
Wi-Fi, Wi-Fi Direct, Bluetooth 4.1, NFC, USB, słuchawkowe

Pojemność baterii:  3000 mAh
"/>

        <Button
            android:id="@+id/wstecz"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:onClick="cofnij"
            android:text="wstecz"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"/>

    </LinearLayout>

</ScrollView>
