        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prosty Dialog"
        android:onClick="ProstyDialog"
        android:layout_alignBaseline="@+id/buttonShowCustomDialog"
        android:layout_alignBottom="@+id/buttonShowCustomDialog"
        android:layout_alignStart="@+id/stopSound" />

    <Button
        android:id="@+id/stopSound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
